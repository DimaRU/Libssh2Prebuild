buildFatLibrary () {
  local inputs=$1
  local output=$2
  local dirname=$(dirname "$2")

  mkdir -p "$dirname" || true
  echo "lipo creating $output with $inputs"
  lipo -create $inputs -output "$output"
}

copyHeaders () {
  local input=$1
  local output=$2

  rm -rf "$output"
  mkdir -p "$output"
  cp -RL "$input" "$output"
}
